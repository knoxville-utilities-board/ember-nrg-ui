{{! template-lint-disable no-inline-styles }}
<div
  class={{this.wrapperClasses}}
  style={{this.modalStyles}}
  role="dialog"
  aria-label="Modal"
  {{on-resize this.onResize}}
  {{did-insert this.didInsertModalElement}}
>
  <NrgDimmer
    @ariaLabel={{if this.modalService.dimmerClickable "Dismiss Modal"}}
    @shading={{this.modalService.dimmerType}}
    @onClick={{this.modalService.onDimmerClick}}
    @onRegister={{this.registerDimmer}}
    @visible={{this.renderDimmer}}
  />
  {{#if this.hasCloseIcon}}
    <i
      class="close icon"
      role="button"
      aria-label="Close modal"
      {{on "click" (fn this.handleClick @modal.onHide)}}
    ></i>
  {{/if}}
  {{#if @modal.headerText}}
    <div class="ui header">
      {{@modal.headerText}}
    </div>
  {{/if}}

  <div
    class="{{unless @modal.flyout 'modal-content'}}
      {{if @modal.lightbox 'image'}}
      {{unless @modal.sidebar 'content'}}
      {{if @modal.scrolling 'scrolling'}}"
    {{did-insert this.didInsert}}
    {{will-destroy this.willDestroyElement}}
  ></div>

  {{#if @modal.hasButtons}}
    <div class="actions">
      {{#if @modal.secondaryButton}}
        <NrgButton
          @class={{@modal.secondaryButtonClass}}
          @text={{@modal.secondaryButton}}
          @onClick={{(fn this.handleClick @modal.onSecondary)}}
        />
      {{/if}}
      {{#if @modal.primaryButton}}
        <NrgButton
          @class="primary right"
          @text={{@modal.primaryButton}}
          @onClick={{(fn this.handleClick @modal.onPrimary)}}
          @autofocus={{true}}
        />
      {{/if}}
    </div>
  {{/if}}
</div>