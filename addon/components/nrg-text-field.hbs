<div class="ui input {{if @fluid @fluid}} {{@class}}" type="text" ...attributes>
  {{#if (has-block)}}
    {{yield
      (hash
        input=(component
          "nrg-text-field/trim-input"
          focusId=@focusId
          type=this.type
          min=@min
          max=@max
          step=@step
          value=this.value
          name=@name
          placeholder=@placeholder
          autocomplete=@autocomplete
          autocapitalize=@autocapitalize
          disabled=@disabled
          maxLength=@maxLength
          onFocus=@onFocus
          onBlur=@onBlur
          onChange=this.onChange
        )
      )
    }}
  {{else}}
    <NrgTextField::TrimInput
      @focusId={{@focusId}}
      @type={{this.type}}
      @min={{@min}}
      @max={{@max}}
      @step={{@step}}
      @value={{this.value}}
      @name={{@name}}
      @placeholder={{@placeholder}}
      @autocomplete={{@autocomplete}}
      @autocapitalize={{@autocapitalize}}
      @disabled={{@disabled}}
      @maxLength={{@maxLength}}
      @onFocus={{@onFocus}}
      @onBlur={{@onBlur}}
      @onChange={{this.onChange}}
    />
  {{/if}}

</div>