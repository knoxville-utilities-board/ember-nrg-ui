<NrgDropdown
  @class="item icon"
  @freeform={{true}}
  @disabled={{this.contextService.disabled}}
  as |dropdown|
>
  <dropdown.source>
    <i class="ellipsis vertical icon"></i>
  </dropdown.source>
  <dropdown.menu as |menu|>
    {{#each this.contextService.contextItems as |option|}}
      {{#if option.isDivider}}
        <div class="ui divider"></div>
      {{else if option.isCheckbox}}
        <menu.item
          @onSelect={{fn this.itemSelected option}}
          @disabled={{option.disabled}}
        >
          <div class="ui checkbox read-only">
            <input class="hidden" type="checkbox" checked={{option.checked}} />
            <label>
              {{#if option.iconClass}}
                <i class="icon {{option.iconClass}}"></i>
              {{/if}}
              {{option.label}}
            </label>
          </div>
        </menu.item>
      {{else}}
        <menu.item
          @onSelect={{fn this.itemSelected option}}
          @disabled={{option.disabled}}
        >
          {{#if option.iconClass}}
            <i class="icon {{option.iconClass}}"></i>
          {{/if}}
          {{option.label}}
        </menu.item>
      {{/if}}
    {{/each}}
  </dropdown.menu>
</NrgDropdown>