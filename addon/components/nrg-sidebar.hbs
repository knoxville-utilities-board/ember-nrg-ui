<NrgModal
  @sidebar={{true}}
  @isOpen={{this.application.sidebarIsOpen}}
  @onDismiss={{this.onClickInternal}}
  class={{@class}}
  {{on-resize this.onResize}}
  ...attributes
>
  <NrgSidebarMenu @onClickInternal={{this.onClickInternal}}>
    <:default as |sidebar|>
      {{yield sidebar}}
    </:default>
    <:footer as |sidebar|>
      {{yield sidebar to="footer"}}
    </:footer>
  </NrgSidebarMenu>
</NrgModal>