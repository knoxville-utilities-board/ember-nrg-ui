<NrgModal
  @sidebar={{true}}
  @isOpen={{this.application.sidebarIsOpen}}
  {{on-resize this.onResize}}
>
  <NrgSidebarMenu
    @onClickInternal={{this.onClickInternal}}
  >
    <:default as |sidebar|>
      {{yield sidebar}}
    </:default>
    <:footer as |sidebar|>
      {{yield sidebar to="footer"}}
    </:footer>
  </NrgSidebarMenu>
</NrgModal>