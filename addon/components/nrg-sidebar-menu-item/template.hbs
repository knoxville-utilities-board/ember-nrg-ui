{{#if item.sidebarAction}}
  <a href="" class="item" {{action sidebarAction child}}>
    {{nrg-sidebar-menu-item/content item=item}}
  </a>
{{else if item.sidebarURL}}
  <a href="{{item.sidebarURL}}" class="item" target="_blank" {{action clickedLink preventDefault=false}}>
    {{nrg-sidebar-menu-item/content item=item}}
  </a>
{{else}}
  {{#link-to item.routeName class=_linkToItemClass click=(action clickedLink)}}
    {{nrg-sidebar-menu-item/content item=item}}
  {{/link-to}}
{{/if}}
