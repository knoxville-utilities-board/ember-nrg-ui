{{#if image}}
  <div class="image">
    <img src={{image}}>
  </div>
{{/if}}
<div class="middle aligned content">
  {{#if header}}
    <div class="header">{{header}}</div>
  {{/if}}
  {{#if meta}}
    <div class="meta">
      <span>{{meta}}</span>
    </div>
  {{/if}}
  {{#if description}}
    <div class="description">
      <p>{{description}}</p>
    </div>
  {{/if}}
  {{#if (or hasBlock item.labels)}}
    <div class="extra">
      {{#each item.labels as |label|}}
        <div class="ui label" {{action "openLink" label.link label.openLinkInNewWindow bubbles=false}}>
          {{#if label.icon}}
            <i class="{{label.icon}} icon"></i>
            {{label.text}}
          {{else}}
            {{label}}
          {{/if}}
        </div>
      {{/each}}
      {{yield}}
    </div>
  {{/if}}
</div>
