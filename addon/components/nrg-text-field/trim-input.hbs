<input
  id={{@focusId}}
  class={{@class}}
  type={{@type}}
  min={{@min}}
  max={{@max}}
  step={{@step}}
  value={{this.displayValue}}
  name={{@name}}
  autocapitalize={{@autocapitalize}}
  disabled={{@disabled}}
  maxlength={{@maxLength}}
  autocomplete={{if @autocomplete "on" "off"}}
  placeholder={{@placeholder}}
  readonly={{@readonly}}
  {{on "blur" this.blur}}
  {{on "focus" this.focus}}
  {{on "input" this.valueChange}}
/>