<div class={{if @isProgressHidden "display-none" "progress-bar"}}>
  <div class="spacing-container {{if @isAnimated "animated" ""}}">
    <div class="bar-container">
      <div style={{this.infillStylingString}} class="infill">
      </div>
      <div class="outer-border">
      </div>
      <div class="step-container">

        {{#each this.stepArray as |value|}}
          <div
            class="step-width"
            style={{this.stepWidthString}}
            key={{value}}
          >
            <div class="step {{unless @showDots "hidden"}}"></div>
          </div>
        {{/each}}

      </div>

    </div>
    <div
      style={{this.absoluteWidthString}}
      class="current-step {{unless @showCurrentDot "hidden"}}"
    >
    </div>
  </div>
  {{#if @showLabel}}
  <div class="text-container">
    <span style={{this.labelColorString}}>
      <strong>Step {{@progressValue}} </strong>
      of
      {{@progressMax}}
    </span>
  </div>
  {{/if}}
</div>