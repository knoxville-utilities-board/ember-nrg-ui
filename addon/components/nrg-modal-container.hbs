<div class="ui modals {{if this.modalService.hasOpenModals "visible active" "hidden"}} {{if this.activeModal.sidebar "sidebar-container"}}">
  {{#each this.modalService.openModals as |modal|}}
    {{#if (eq this.modalService.activeModal modal)}}
      <div role="button" class="ui dimmer visible active {{if this.modalService.activeModal.sidebar "sidebar-dimmer" "page"}} {{if (not this.modalService.activeModal.isDismissable) "not-dismissable"}} {{this.modalService.activeModal.dimmerClass}}" {{on "click" this.onDimmerClick}}></div>
    {{/if}}
    <NrgModalContainer::ModalWrapper @modal={{modal}} />
  {{/each}}
</div>
