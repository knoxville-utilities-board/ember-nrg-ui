{{#if hasBlock}}
  {{yield (hash
    list=this
    header=(component "nrg-list/header" filterChanged=(action filterChanged) searchChanged=(action this.searchChanged))
    items=(component "nrg-list/items" isSelectable=isSelectable selectionType=selectionType pageMeta=pageMeta pageSizes=pageSizes selectedPageSize=selectedPageSize loading=loading items=items itemClicked=(action this.onItemSelect) changePage=(action this.onChangePage) groupHeaderHandler=groupHeaderHandler)
    create-button=(component "nrg-button" class="ui circular icon big primary bottom right floating button" icon="plus"))}}
{{else}}
  <NrgList::Items
    @isSelectable={{isSelectable}}
    @selectionType={{selectionType}}
    @pageMeta={{pageMeta}}
    @pageSizes={{pageSizes}}
    @selectedPageSize={{selectedPageSize}}
    @loading={{loading}}
    @items={{items}}
    @itemClicked={{action this.onItemSelect}}
    @changePage={{action this.onChangePage}}
    @groupHeaderHandler={{groupHeaderHandler}} />
{{/if}}
