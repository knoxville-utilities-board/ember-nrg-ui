<FreestyleSection @name="Search">
  <Freestyle::Usage>
    <:example>
      <p>
        Searching for
        <strong>{{or this.queryString "Nothing"}}</strong>
        <br />
        Selected
        <strong>{{or this.selectedResult.header "Nothing"}}</strong>
      </p>

      <NrgSearch
        @disabled={{this.disabled}}
        @hideSearchIcon={{this.hideSearchIcon}}
        @readonly={{this.readonly}}
        @clearable={{this.clearable}}
        @query={{this.query}}
        @model={{this}}
        @valuePath="selectedResult"
        @minCharacters={{this.minCharacters}}
      />
    </:example>

    <:api as |Args|>
      <Args.Bool
        @name="disabled"
        @defaultValue={{false}}
        @value={{this.disabled}}
        @onInput={{fn (mut this.disabled)}}
      />
      <Args.Bool
        @name="readonly"
        @defaultValue={{false}}
        @value={{this.readonly}}
        @onInput={{fn (mut this.readonly)}}
      />
      <Args.Bool
        @name="hideSearchIcon"
        @defaultValue={{false}}
        @value={{this.hideSearchIcon}}
        @onInput={{fn (mut this.hideSearchIcon)}}
      />
      <Args.Bool
        @name="clearable"
        @defaultValue={{false}}
        @value={{this.clearable}}
        @onInput={{fn (mut this.clearable)}}
      />
      <Args.String
        @name="minCharacters"
        @value={{this.minCharacters}}
        @onInput={{fn (mut this.minCharacters)}}
      />

    </:api>
  </Freestyle::Usage>
</FreestyleSection>