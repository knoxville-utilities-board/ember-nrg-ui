<FreestyleSection @name="Progress Bar">
  <Freestyle::Usage>
    <:example>
      <NrgProgressBar
        @progressValue={{this.currentStep}}
        @progressMax={{this.maxStep}}
        @isAnimated={{this.isAnimated}}
        @areDotsHidden={{this.areDotsHidden}}
      />
    </:example>

    <:api as |Args|>
      <Args.Number
        @name="currentStep"
        @min={{1}}
        @max={{this.maxStep}}
        @step={{1}}
        @onInput={{fn (mut this.currentStep)}}
      />
      <Args.Number
        @name="maxStep"
        @min={{1}}
        @max={{10}}
        @step={{1}}
        @onInput={{fn (mut this.maxStep)}}
      />
      <Args.Bool
        @name="isAnimated"
        @defaultValue={{true}}
        @value={{this.isAnimated}}
        @onInput={{fn (mut this.isAnimated)}}
      />
      <Args.Bool
        @name="areDotsHidden"
        @defaultValue={{false}}
        @value={{this.areDotsHidden}}
        @onInput={{fn (mut this.areDotsHidden)}}
      />
    </:api>
  </Freestyle::Usage>
</FreestyleSection>