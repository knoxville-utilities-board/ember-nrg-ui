<Freestyle::Usage @name="Text Field">
  <:description>
    Handles user input.
  </:description>

  <:example>
    <NrgFormContainer as |form|>
      <form.field @label="Text Field" as |field|>
        <field.text-field
          @disabled={{this.inputDisabled}}
          @placeholder="Placeholder"
          @valuePath="inputValue"
          @model={{this}}
          as |view|
        >
          {{view.input}}
        </field.text-field>
      </form.field>
    </NrgFormContainer>
  </:example>

  <:api as |Args|>
    <Args.String
      @name="inputValue"
      @description="The value of the input field."
      @value={{this.inputValue}}
      @onInput={{fn (mut this.inputValue)}}
    />
  </:api>
</Freestyle::Usage>

<Freestyle::Usage @name="Text Field with Attachments">
  <:description>
    Handles user input.
  </:description>

  <:example>
    <NrgFormContainer as |form|>
      <form.field @label="Text Field" as |field|>
        <field.text-field
          @class="left icon action"
          @disabled={{this.inputDisabled}}
          @placeholder="Placeholder"
          @valuePath="inputValue"
          @model={{this}}
          as |view|
        >
          <NrgIcon @icon="settings" />
          {{view.input}}
          <NrgButton
            @class="primary"
            @text="Action"
            @disabled={{this.disabled}}
          />
        </field.text-field>
      </form.field>
    </NrgFormContainer>
  </:example>

  <:api as |Args|>
    <Args.String
      @name="inputValue"
      @description="The value of the input field."
      @value={{this.inputValue}}
      @onInput={{fn (mut this.inputValue)}}
    />
  </:api>
</Freestyle::Usage>