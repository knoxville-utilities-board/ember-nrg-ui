<FreestyleSection @name="Forms" as |Section|>
  <Section.subsection @name="Text Field">
    <Freestyle::Usage>
      <:example>
        <NrgFormContainer as |form|>
          <form.field @label="Text Field" as |field|>
            <field.text-field
              @disabled={{this.inputDisabled}}
              @placeholder="Placeholder"
              @readonly={{this.readonly}}
              @valuePath="textInputValue"
              @model={{this}}
              as |view|
            >
              <view.input />
            </field.text-field>
          </form.field>
        </NrgFormContainer>
      </:example>

      <:api as |Args|>
        <Args.String
          @name="textInputValue"
          @description="The value of the input field."
          @value={{this.textInputValue}}
          @onInput={{fn (mut this.textInputValue)}}
        />
        <Args.Bool
          @name="readonly"
          @description="Whether the input field is readonly."
          @value={{this.readonly}}
          @onInput={{fn (mut this.readonly)}}
        />
      </:api>
    </Freestyle::Usage>

    <Freestyle::Usage>
      <:example>
        <NrgFormContainer as |form|>
          <form.field @label="Text Field" as |field|>
            <field.text-field
              class="left icon action"
              @disabled={{this.inputDisabled}}
              @placeholder="Placeholder"
              @valuePath="textInputValue"
              @model={{this}}
              as |view|
            >
              <NrgIcon @icon="settings" />
              <view.input />
              <NrgButton
                class="primary"
                @text="Action"
                @disabled={{this.disabled}}
              />
            </field.text-field>
          </form.field>
        </NrgFormContainer>
      </:example>

      <:api as |Args|>
        <Args.String
          @name="textInputValue"
          @description="The value of the input field."
          @value={{this.textInputValue}}
          @onInput={{fn (mut this.textInputValue)}}
        />
      </:api>
    </Freestyle::Usage>
  </Section.subsection>

  <Section.subsection @name="Number Field">
    <Freestyle::Usage>
      <:example>
        <NrgFormContainer as |form|>
          <form.field @label="Number Field" as |field|>
            <field.text-field
              class="left icon"
              @model={{this}}
              @valuePath="numberValue"
              @placeholder={{if this.allowDecimals "###.##" "###"}}
              @type="number"
              @allowDecimals={{this.allowDecimals}}
              @allowNegatives={{this.allowNegatives}}
              @allowNull={{this.allowNull}}
              as |view|
            >
              <NrgIcon @icon="hashtag" />
              <view.input />
            </field.text-field>
          </form.field>
        </NrgFormContainer>
      </:example>

      <:api as |Args|>
        <Args.String
          @name="numberValue"
          @description="The value of the input field."
          @value={{this.numberValue}}
          @onInput={{fn (mut this.numberValue)}}
        />
        <Args.Bool
          @name="allowDecimals"
          @description="Allow decimals."
          @value={{this.allowDecimals}}
          @onInput={{fn (mut this.allowDecimals)}}
        />
        <Args.Bool
          @name="allowNegatives"
          @description="Allow negative numbers."
          @value={{this.allowNegatives}}
          @onInput={{fn (mut this.allowNegatives)}}
        />
        <Args.Bool
          @name="allowNull"
          @description="Allow null as an accepted value."
          @value={{this.allowNull}}
          @onInput={{fn (mut this.allowNull)}}
        />
      </:api>
    </Freestyle::Usage>
  </Section.subsection>
</FreestyleSection>