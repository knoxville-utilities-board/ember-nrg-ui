<FreestyleSection @name="Forms" as |Section|>
  <Section.subsection @name="Button">
    <Freestyle::Usage>
      <:example>
        <NrgButton
          @text={{this.buttonText}}
          @class={{this.buttonClass}}
          @loading={{this.loading}}
          @disabled={{this.disabled}}
        />
      </:example>

      <:api as |Args|>
        <Args.String
          @name="class"
          @value={{this.buttonClass}}
          @onInput={{fn (mut this.buttonClass)}}
          @options={{this.classOptions}}
        />
        <Args.String
          @name="text"
          @value={{this.buttonText}}
          @onInput={{fn (mut this.buttonText)}}
        />
        <Args.Bool
          @name="loading"
          @defaultValue={{false}}
          @value={{this.loading}}
          @onInput={{fn (mut this.loading)}}
        />
        <Args.Bool
          @name="disabled"
          @defaultValue={{false}}
          @value={{this.disabled}}
          @onInput={{fn (mut this.disabled)}}
        />
      </:api>
    </Freestyle::Usage>

    <Freestyle::Usage>
      <:example>
        <NrgButton @class="circular primary ui icon button">
          <i class="plus icon"></i>
        </NrgButton>
      </:example>
    </Freestyle::Usage>
  </Section.subsection>
</FreestyleSection>