<FreestyleSection @name="Forms" as |Section|>
  <Section.subsection @name="Datetime">
    <Freestyle::Usage>
      <:example>
        <NrgFormContainer as |form|>
          <form.field @label="Datetime" as |field|>
            <field.datetime
              @disabled={{this.dateTimeDisabled}}
              @valuePath="dateTimeValue"
              @model={{this}}
              @type={{this.dateTimeType}}
              @maxDate={{this.maxDate}}
              @allowMinuteSelection={{this.allowMinuteSelection}}
              @readonly={{this.dateTimeReadonly}}
            />
          </form.field>
        </NrgFormContainer>
      </:example>

      <:api as |Args|>
        <Args.String
          @name="type"
          @value={{this.dateTimeType}}
          @onInput={{fn (mut this.dateTimeType)}}
          @options={{this.dateTimeTypeOptions}}
        />
        <Args.Bool
          @name="disabled"
          @defaultValue={{false}}
          @value={{this.dateTimeDisabled}}
          @onInput={{fn (mut this.dateTimeDisabled)}}
        />
        <Args.Bool
          @name="readonly"
          @defaultValue={{false}}
          @value={{this.dateTimeReadonly}}
          @onInput={{fn (mut this.dateTimeReadonly)}}
        />
        <Args.Object
          @name="maxDate"
          @value={{this.maxDate}}
          @jsonCollapseDepth={{0}}
        />
        <Args.Bool
          @name="allowMinuteSelection"
          @defaultValue={{false}}
          @value={{this.allowMinuteSelection}}
          @onInput={{fn (mut this.allowMinuteSelection)}}
        />
      </:api>
    </Freestyle::Usage>
  </Section.subsection>
</FreestyleSection>