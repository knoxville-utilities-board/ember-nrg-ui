    {{view.home-card label="Dropdown" icon="settings" route="index" meta="22 Hrs" badgeLoading=true}}
    {{view.home-card label="Button" icon="code" route="example.nrg-form-container" description="This is the description area" badge="55"}}
    {{view.home-card label="Forms" icon="tasks" route="example.nrg-form-container" description="This is the description area"}}
    {{view.home-card label="Forms" icon="tasks" route="example.nrg-form-container" meta="33 Persons"}}
  {{/nrg-home-cards}}
  <!-- END-SNIPPET  -->
{{/nrg-code-block}}

