{{#nrg-code-block label="Action Cards" codeBlockName="action-card.hbs" }}
  <!-- BEGIN-SNIPPET action-card -->
  {{#nrg-home-cards actionCard=true as |view|}}
    {{view.home-card label="Actionable Item 1" icon="calendar" route="index" meta="22"}}
    {{view.home-card label="Actionable Item 2" icon="warning sign" route="index" badge="55"}}
    {{view.home-card label="Actionable Item 3" icon="mail" url="http://www.google.com"}}
  {{/nrg-home-cards}}
  <!-- END-SNIPPET  -->
{{/nrg-code-block}}

{{#nrg-code-block label="Home Cards" codeBlockName="home-card.hbs" }}
  <!-- BEGIN-SNIPPET home-card -->
  {{#nrg-home-cards as |view|}}
    {{view.home-card label="Dropdown" icon="settings" route="index" meta="22 Hrs" badgeLoading=true}}
    {{view.home-card label="Button" icon="code" route="example.nrg-form-container" description="This is the description area" badge="55"}}
    {{view.home-card label="Forms" icon="tasks" route="example.nrg-form-container" description="This is the description area"}}
    {{view.home-card label="Forms" icon="tasks" route="example.nrg-form-container" meta="33 Persons"}}
  {{/nrg-home-cards}}
  <!-- END-SNIPPET  -->
{{/nrg-code-block}}

