<NrgCodeBlock @label="List (Advanced)" @codeBlockName="nrg-list-advanced.hbs">
  <!-- BEGIN-SNIPPET nrg-list-advanced -->
  <NrgList @items={{filteredItems}} @pageMeta={{filteredItems.meta}} @query={{action "query"}} @select={{action "select"}} as |list|>
    <list.header as |header|>
      <header.search />
      <header.filter @filters={{filters}} @filterParam="animal" @selectedFilter={{selectedFilter}} />
    </list.header>
    <list.items as |item|>
      <div class="content">
        <a class="header">{{item.name}}</a>
        <div class="meta">
          <span>{{item.gender}}</span>
        </div>
        <div class="extra">
          {{item.animal}}
        </div>
      </div>
    </list.items>
    <list.create-button />
  </NrgList>
  <!-- END-SNIPPET  -->
</NrgCodeBlock>

