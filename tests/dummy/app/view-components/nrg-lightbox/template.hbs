{{page-title "nrg-lightbox"}}

<NrgCodeBlock @label="Lightbox Thumbnails" @codeBlockName="lightbox-thumbnails.hbs">
  <!-- BEGIN-SNIPPET lightbox-thumbnails -->
  {{#each photos as |photo|}}
    <NrgLightboxThumbnail @photo={{photo}} />
  {{/each}}
  <!-- END-SNIPPET  -->
</NrgCodeBlock>

<NrgCodeBlock @label="Lightbox Thumbnails with Custom Details" @codeBlockName="lightbox-thumbnails-block.hbs">
  <!-- BEGIN-SNIPPET lightbox-thumbnails-block -->
  {{#each photos as |photo|}}
    <NrgLightboxThumbnail @photo={{photo}}>
      <strong>{{photo.detail}}</strong>
      <span>{{counter}}</span>
    </NrgLightboxThumbnail>
  {{/each}}
  <!-- END-SNIPPET  -->
</NrgCodeBlock>
